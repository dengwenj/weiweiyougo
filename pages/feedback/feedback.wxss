page {
  background-color: #eee;
}
.tabs {
  display: flex;
}
.content {
  padding: 10rpx;
  color: #78684f;
}
.content .si {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
}
.content .si text {
  border-radius: 10rpx;
  background-color: #fff;
  padding: 10rpx 0;
  margin: 10rpx;
  width: 30%;
  text-align: center;
}
.content .wenben {
  background-color: #fff;
  border-radius: 10rpx;
}
.content .wenben textarea {
  width: 100%;
  padding: 10rpx;
}
.content .wenben .btn {
  padding-bottom: 20rpx;
}
.content .wenben .btn button {
  width: 80rpx;
  height: 80rpx;
  padding: 0;
  margin: 0;
  margin-left: 20rpx;
  background-color: #eee;
  line-height: 90rpx;
  color: #ccc;
}
.content .tijiao {
  margin-top: 20rpx;
}
.content .tijiao button {
  width: 150rpx;
  line-height: 70rpx;
  color: #fff;
  margin-right: 0;
  padding: 0rpx;
  font-size: 30rpx;
  background-color: var(--themeColor);
}
