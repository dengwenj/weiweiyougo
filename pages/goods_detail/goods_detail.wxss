.fiexd {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 90rpx;
  overflow-y: auto;
}
.fiexd .detail_swiper swiper {
  height: 65vw;
  text-align: center;
}
.fiexd .detail_swiper swiper .detail_swiper_item .swiper-image {
  width: 60%;
}
.fiexd .info {
  margin-top: 20rpx;
}
.fiexd .info .price {
  margin-left: 10rpx;
  margin-bottom: 10rpx;
  color: #d43a3a;
  font-size: 34rpx;
}
.fiexd .info .bottom {
  display: flex;
  padding: 15rpx;
  border-top: 15rpx solid #eee;
  border-bottom: 15rpx solid #eee;
}
.fiexd .info .bottom .left {
  flex: 5;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.fiexd .info .bottom .right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  border-left: 1px solid #000;
}
.fiexd .info .bottom .right text {
  font-size: 26rpx;
}
.fiexd .tuwen .title {
  color: var(--themeColor);
  font-size: 36rpx;
  padding: 15rpx;
}
.bottombuju {
  display: flex;
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  height: 90rpx;
  background-color: #fff;
  border-top: 1px solid #ccc;
}
.bottombuju .kffxgwc {
  flex: 1;
  display: flex;
}
.bottombuju .kffxgwc .sahngxia {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}
.bottombuju .kffxgwc .sahngxia button {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.bottombuju .jrgwcljgm {
  flex: 1;
  display: flex;
}
.bottombuju .jrgwcljgm .jr {
  height: 100%;
  flex: 1;
  text-align: center;
  line-height: 90rpx;
  background-color: #ffa300;
  color: #fff;
}
.bottombuju .jrgwcljgm .lj {
  height: 100%;
  flex: 1;
  text-align: center;
  line-height: 90rpx;
  background-color: #f6554d;
  color: #fff;
}
.active {
  color: var(--themeColor);
}
