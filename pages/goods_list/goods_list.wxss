.zh-item {
  margin-top: 10rpx;
  height: 200rpx;
  display: flex;
  border-bottom: 1px solid #ccc;
}

.zh-item .left {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 2;
}

.zh-item .left .image {
  width: 65%;
}

.zh-item .right {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.zh-item .right .text {
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.zh-item .right .money {
  color: #db3a3a;
  font-size: 32rpx;
}

.xl,
.jg {
  display: flex;
  justify-content: center;
  margin-top: 60rpx;
  font-size: 50rpx;
  color: var(--themeColor);
}