@import './styles/iconfont.wxss';

/* 在微信小程序中 不支持 * 通配符 */

page,
view,
text,
swiper,
swiper-item,
image,
navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}


/* 
  主题颜色 通过变量来实现
  less 中 存在变量
  原生的 css 和 wxss 也存在
*/

page {
  /* 主题颜色 */
  --themeColor: #0094ff;
  /* 统一字体大小 假设设计稿是 375 的*/
  font-size: 28rpx;
}